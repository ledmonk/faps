#!/bin/bash

# Welcome to the Fully Automated Paradigm Shifter! (FAPS)
# This script was designed to send motivation to your team. Or spam your
# enemies. Whatever.

# This section wil set up your mailx parameters

# Who are you sending this to? Note the differences in spacing. The first emails
# are being BCC'd with the -b option in the mail command where as the final
# email address is a throw away. mail x needs one visable account to send with a
# bcc. choose wisely
distro='bcc1@.com,bcc2@.com, admin@faps.com'

# who is this coming from?
from="admin@faps.com"
# subject line. duh. 
subject="Daily Synergy"


# Variables for building of buzz sentences 
# use 'past tense' ?
buzzverbs=( \
	"leveraged" \
	"promoted" \
	"used" \
	"pinged" \
	"prioritzed" \
	"increased" \
	"encouraged" \
	"road mapped" \
)


# can probably be duplicated
buzznouns=( \
        "synergy" \
        "shiftiing the paradigm" \
        "deep dives" \
	"deep diving" \
        "core competency" \
        "incentivization" \
        "the bleeding edge" \
        "my deliverables" \
        "action items" \
        "drilling down" \
        "low hanging fruit" \
	"thought leadership" \
	"cross team synergies" \
	"action plans" \
	"scrum planning" \
	"technical debt" \
)

# these should really tie the room together
buzzadjectives=( \
        "think outside the box" \
	"shift the paradigm" \
	"increase bandwidth" \
	"ideate" \
	"work in an agile methodology" \
	"increase productivity" \
	"promote thought leadership" \
	"leverage agile thought" \
	"decrease technical debt" \
	"generate tps reports" \
)	

# Randomizes the selection of your buzz words

# if you want to spam your enemies, add in the while loop. 
#while [ 1 ]
#do 
noun=${buzznouns[ $((RANDOM % ${#buzznouns[@]} )) ]}
verb=${buzzverbs[ $((RANDOM % ${#buzzverbs[@]} )) ]}
adjective=${buzzadjectives[ $((RANDOM % ${#buzzadjectives[@]} )) ]}


echo -e "Today I $verb $noun to $adjective \n\n\n sent via FAPS" | /bin/mailx -r $from -s "$subject" -b $distro 
# if you want to clog up a email relay, uncomment the while loop AND the sleep timer
#sleep 10
#done

